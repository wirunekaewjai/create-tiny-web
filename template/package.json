{
  "name": "PROJECT_NAME",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:css": "tailwindcss -i ./tailwind.css -o ./assets/style.css --watch",
    "dev:rs": "cargo watch -w src/server -x 'run'",
    "dev:ts": "nodemon --watch src/client -e ts,tsx --exec 'bun build src/client/app.ts --outdir assets'",
    "dev": "concurrently 'bun run dev:rs' 'bun run dev:ts' 'bun run dev:css'",
    "deploy": "bun run build && fly deploy",
    "build:css": "tailwindcss -i ./tailwind.css -o ./assets/style.css --minify",
    "build:ts": "bun build src/client/app.ts --outdir assets --minify",
    "build": "bun run build:css && bun run build:ts",
    "start": "cargo run --release"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@wirunekaewjai/jetpack": "github:wirunekaewjai/jetpack#da900bb43a460d1b6072e0feabe39d2440b2e842",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.2",
    "tailwindcss": "^3.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}